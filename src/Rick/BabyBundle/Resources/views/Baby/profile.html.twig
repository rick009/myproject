{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}
        <div class="row-fluid">
            <div class="col-lg-4">
                <div class="form-group">
                    <div class="col-lg-12">
                        <img id="baby_picture" src="{{ asset(profile.picture) }}" alt="" class="img-thumbnail"/>
                        {{ form_widget(form.file) }}
                    </div>
                </div>
            </div>
            <div id="info" class="col-lg-8">
                <div class="row-fluid">
                    <div class="form-group col-lg-6 alert-info">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.name) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.file) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group alert-info col-lg-6">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.sex) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.sex, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="form-group alert-success col-lg-6">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.name_meaning) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.name_meaning, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group col-lg-6 alert-success">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.name_generated_by) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.name_generated_by, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="form-group col-lg-6 alert-warning">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.nick_name) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.nick_name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group col-lg-6 alert-warning">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.nick_name_generated_by) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.nick_name_generated_by, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="form-group col-lg-6 alert-danger">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.blood_type) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.blood_type, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group col-lg-6 alert-danger">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.height) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.height, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="form-group col-lg-6 alert-info">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.weight) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.weight, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group col-lg-6 alert-info">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.birthday) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.birthday, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="form-group alert-success col-lg-6">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.constellation) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.constellation, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group alert-success col-lg-6">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.lunar_birthday) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.lunar_birthday, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="form-group alert-warning col-lg-6">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.year_of_birth) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.year_of_birth, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group alert-warning col-lg-6">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.age_of_dad) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.age_of_dad, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="form-group alert-danger col-lg-6">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.age_of_mum) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.age_of_mum, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group alert-danger col-lg-6">
                        <label for="inputEmail3" class="col-lg-4 control-label">
                            {{ form_label(form.hospital) }}
                        </label>
                        <div class="col-lg-8">
                            {{ form_widget(form.hospital, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="form-group">
                        <div class="col-lg-4 col-lg-offset-5">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                            {{ form_widget(form.reset, {'attr': {'class': 'btn'}}) }}
                        </div>
                    </div>
                </div>

            </div>
        </div>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="application/javascript">
        $(document).ready(function(){
           $('#baby_picture').height($('#info').height());
        });
    </script>
{% endblock %}